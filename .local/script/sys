#!/bin/bash

SHELL=/bin/bash
export SYSTEMD_COLORS=true

preview() {
	systemctl status "$@"
}

export -f preview

systemctl list-units --type=service --all --plain --no-pager --legend=false "$1" \
	| sed -r -e "s/loaded\s+/ğŸ¤– /" -e "s/not-found/ğŸ’”/" -e "s/dead\s+/â˜ ï¸ /" -e "s/running/ğŸƒ/" -e "s/inactive/ï¤¼/" -e "s/active\s+/ï¤½ /" \
	| fzf \
	--preview "preview $1 {1}" \
	--preview-window=top,70% \

	# --bind "F1:reload(_installed)" \

